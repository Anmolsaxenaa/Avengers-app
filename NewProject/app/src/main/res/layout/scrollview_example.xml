                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/black_panther"
                android:text="black_panther@gmail.com"
                android:textColor="#439df0"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>




</ScrollView>


