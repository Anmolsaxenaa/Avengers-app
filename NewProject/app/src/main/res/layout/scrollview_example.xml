                android:layout_toRightOf="@id/hulk"
                android:text="hulk123@mars.com"
                android:textColor="#439df0"
                android:textSize="20dp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/captain_america"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:src="@drawable/captain_america"/>

            <TextView
                android:id="@+id/txtcaptain_america"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captain America"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="40sp"
                android:textSize="30dp"
                android:layout_toRightOf="@id/captain_america"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtmailidcaptain_america"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtcaptain_america"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/captain_america"
                android:text="captain_america123@mars.com"
                android:textColor="#439df0"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/black_panther"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20sp"
